<%- include("../partials/header.ejs") -%>

<main id="main">

  <!-- ======= Breadcrumbs ======= -->
  <div class="breadcrumbs">
    <div class="page-header d-flex align-items-center" style="background-image: url('');">
      <div class="container position-relative">
        <div class="row d-flex justify-content-center">
          <div class="col-lg-8 text-center">
            <h2>ClimateGame</h2>
            <p>ClimateGame is a game made for all age groups to make aware about climate change and how to fight it.</p>
          </div>
        </div>
      </div>
    </div>
    <nav>
      <div class="container">
        <ol>
          <li><a href="/">Home</a></li>
          <li><a href="/projects">Projects</a></li>
          <li>ClimateGame</li>
        </ol>
      </div>
    </nav>
  </div><!-- End Breadcrumbs -->

  <section class="sample-page">
    <div class="container" data-aos="fade-up">

      <div class="icon-boxes position-relative">
        <div class="container position-relative">
          <div class="row gy-4 justify-content-center">

            <% if (finish) { %>
            <h1 class="text-center">Game Over</h1>
            <p class="text-center">Final pollution level reached : <span class="text-bg-dark text-white">&nbsp;<%= level %>&nbsp;</span.< /p>
                <div class="col-xl-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                  <a href="/project/game/reset">
                    <div class="icon-box">
                      <h4 class="title text-white">Reset Game</h4>
                    </div>
                  </a>
                </div>
            <% } else { %>

                <h1 class="text-center">Pollution Level : <span class="text-bg-dark text-white">&nbsp;<%= level %>&nbsp;</span></h1>
                <% if (!scenario) { %>
                <h3 class="text-center">Lowest Score : <span class="text-bg-dark text-white">&nbsp;<%= highScore %>&nbsp;</span></h3>
                <% } %>
                <p class="text-center"><%= description %></p>

                <% if (!scenario) { %>
                <div class="col-xl-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                  <a href="/project/game/start">
                    <div class="icon-box">
                      <h4 class="title text-white">Start Game</h4>
                    </div>
                  </a>
                </div>
                <% } %>

                <% if (scenario) { %>

                <% scenario.options.forEach(function(option, index) { %>
                <div class="col-xl-3 col-md-6" data-aos="fade-up" data-aos-delay="100">
                  <a href="/project/game/option-<%= index %>">
                    <div class="icon-box">
                      <h4 class="title text-white"><%= option.option %></h4>
                    </div>
                  </a>
                </div>
                <% }) %>

                <% } %>

                <% } %>

          </div>
        </div>
      </div>

    </div>
  </section>

</main>

<%- include("../partials/footer.ejs") -%>